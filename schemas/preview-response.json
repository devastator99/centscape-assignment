{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Preview Response Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the page/product"
    },
    "image": {
      "type": "string",
      "format": "uri",
      "description": "URL of the preview image"
    },
    "price": {
      "type": "string",
      "description": "The price as a string (e.g., '$29.99', 'N/A')"
    },
    "currency": {
      "type": "string",
      "description": "The currency symbol or code"
    },
    "siteName": {
      "type": "string",
      "description": "The name of the website/domain"
    },
    "sourceUrl": {
      "type": "string",
      "format": "uri",
      "description": "The original URL that was processed"
    }
  },
  "required": ["title", "image", "price", "currency", "siteName", "sourceUrl"],
  "additionalProperties": false
}
